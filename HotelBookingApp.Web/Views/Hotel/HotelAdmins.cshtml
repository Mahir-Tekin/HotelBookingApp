
@model HotelAdminsVM

<form action="AddHotelAdmin" method="post">
    <input type="text" name="managerEMail" />
    <input type="hidden" name="hotel" value="@Model.Hotel" />
    <button type="submit" >Admin Ekle</button>
</form>




<div>
    <ul>
        @foreach(var user in Model.users)
        {
            <li>
                <p>@user.FirstName</p>
                <p>@user.LastName</p>
                <p>@user.Email</p>
                <a asp-action="RemoveHotelAdmin" asp-route-hotel="@Model.Hotel" asp-route-managerEMail="@user.Email" >Yetkiyi Kaldır</a>
            </li>
        }
    </ul>
</div>